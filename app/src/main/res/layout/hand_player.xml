<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_hand_view"
    android:layout_width="140dp"
    android:layout_height="150dp"
    app:strokeColor="@color/black"
    app:strokeWidth="3dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/text_background">

        <ImageView
            android:id="@+id/first_card_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/diamonds_ace"
            android:background="@color/text_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/first_card_number_view" />

        <ImageView
            android:id="@+id/second_card_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/diamonds_ace"
            android:background="@color/text_background"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/second_card_number_view" />


        <TextView
            android:id="@+id/first_card_number_view"
            android:layout_width="0dp"
            android:maxWidth="20dp"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textSize="13sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            android:background="@color/text_background"/>

        <TextView
            android:id="@+id/second_card_number_view"
            android:layout_width="0dp"
            android:maxWidth="20dp"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textSize="13sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            app:layout_constraintLeft_toRightOf="@id/divider"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            android:background="@color/text_background"/>

        <TextView
            android:id="@+id/divider"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/running_count"/>

        <TextView
            android:id="@+id/running_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textSize="25sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_horizontal"
            android:background="@color/text_background"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>